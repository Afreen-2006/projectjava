class Solution(object):
    def removeDuplicates(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        if not nums:
            return 0

        # 'i' is the slow-pointer, tracking the position for the next unique element.
        # 'j' is the fast-pointer, iterating through the array.
        i = 0
        for j in range(1, len(nums)):
            if nums[j] != nums[i]:
                i += 1
                nums[i] = nums[j]
        
        # The new length of the array with unique elements is i + 1.
        return i + 1
