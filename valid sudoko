class Solution(object):
    def isValidSudoku(self, board):
        """
        :type board: List[List[str]]
        :rtype: bool
        """
        # Check rows
        for r in range(9):
            seen = set()
            for c in range(9):
                char = board[r][c]
                if char != '.':
                    if char in seen:
                        return False
                    seen.add(char)

        # Check columns
        for c in range(9):
            seen = set()
            for r in range(9):
                char = board[r][c]
                if char != '.':
                    if char in seen:
                        return False
                    seen.add(char)

        # Check 3x3 sub-boxes
        for i in range(0, 9, 3):  # Iterate through starting rows of sub-boxes
            for j in range(0, 9, 3):  # Iterate through starting columns of sub-boxes
                seen = set()
                for r in range(i, i + 3):
                    for c in range(j, j + 3):
                        char = board[r][c]
                        if char != '.':
                            if char in seen:
                                return False
                            seen.add(char)
        
        return True
